{
  "designSystem": {
    "name": "NFT Marketplace Design System",
    "version": "1.0.0",
    "description": "A modern, dark-themed design system for NFT marketplaces with gradient overlays and vibrant accents",
    
    "colorPalette": {
      "primary": {
        "background": {
          "main": "#1a1a1a",
          "secondary": "#2d2d2d",
          "tertiary": "#3a3a3a",
          "gradient": "radial-gradient(circle at 30% 40%, rgba(255, 193, 7, 0.3) 0%, rgba(0, 0, 0, 0.8) 70%)"
        },
        "accent": {
          "yellow": "#ffc107",
          "green": "#4caf50",
          "cyan": "#00bcd4",
          "teal": "#009688",
          "purple": "#673ab7"
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "#b3b3b3",
          "muted": "#808080"
        }
      },
      "cards": {
        "background": "linear-gradient(135deg, #1e293b 0%, #0f172a 100%)",
        "border": "rgba(59, 130, 246, 0.2)",
        "hover": "rgba(59, 130, 246, 0.1)"
      },
      "buttons": {
        "primary": {
          "background": "#ffc107",
          "text": "#000000",
          "hover": "#ffb300"
        },
        "secondary": {
          "background": "transparent",
          "border": "#00bcd4",
          "text": "#00bcd4",
          "hover": "rgba(0, 188, 212, 0.1)"
        }
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "display": "'Poppins', 'Inter', sans-serif"
      },
      "scale": {
        "hero": {
          "fontSize": "3.5rem",
          "lineHeight": "1.1",
          "fontWeight": "700",
          "letterSpacing": "-0.02em"
        },
        "h1": {
          "fontSize": "2.5rem",
          "lineHeight": "1.2",
          "fontWeight": "600"
        },
        "h2": {
          "fontSize": "2rem",
          "lineHeight": "1.3",
          "fontWeight": "600"
        },
        "h3": {
          "fontSize": "1.5rem",
          "lineHeight": "1.4",
          "fontWeight": "500"
        },
        "body": {
          "fontSize": "1rem",
          "lineHeight": "1.6",
          "fontWeight": "400"
        },
        "caption": {
          "fontSize": "0.875rem",
          "lineHeight": "1.5",
          "fontWeight": "400"
        }
      }
    },

    "spacing": {
      "scale": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem",
        "4xl": "6rem"
      },
      "containers": {
        "maxWidth": "1440px",
        "padding": "2rem",
        "mobilePadding": "1rem"
      }
    },

    "components": {
      "cards": {
        "base": {
          "background": "linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%)",
          "borderRadius": "1rem",
          "border": "1px solid rgba(59, 130, 246, 0.2)",
          "backdropFilter": "blur(20px)",
          "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.3)",
          "padding": "1.5rem",
          "transition": "all 0.3s ease"
        },
        "hover": {
          "transform": "translateY(-4px)",
          "border": "1px solid rgba(59, 130, 246, 0.4)",
          "boxShadow": "0 16px 64px rgba(0, 0, 0, 0.4)"
        }
      },
      
      "buttons": {
        "primary": {
          "background": "#ffc107",
          "color": "#000000",
          "padding": "0.75rem 2rem",
          "borderRadius": "2rem",
          "border": "none",
          "fontWeight": "600",
          "fontSize": "0.95rem",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "boxShadow": "0 4px 16px rgba(255, 193, 7, 0.3)"
        },
        "secondary": {
          "background": "transparent",
          "color": "#00bcd4",
          "padding": "0.75rem 2rem",
          "borderRadius": "2rem",
          "border": "2px solid #00bcd4",
          "fontWeight": "500",
          "cursor": "pointer",
          "transition": "all 0.2s ease"
        },
        "ghost": {
          "background": "transparent",
          "color": "#ffffff",
          "padding": "0.5rem 1rem",
          "border": "none",
          "fontWeight": "400",
          "cursor": "pointer"
        }
      },

      "navigation": {
        "background": "rgba(0, 0, 0, 0.8)",
        "backdropFilter": "blur(20px)",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.1)",
        "padding": "1rem 2rem",
        "position": "fixed",
        "width": "100%",
        "zIndex": "1000"
      },

      "statsGrid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fit, minmax(200px, 1fr))",
        "gap": "2rem",
        "margin": "3rem 0"
      },

      "artworkGrid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(auto-fill, minmax(280px, 1fr))",
        "gap": "1.5rem",
        "padding": "2rem 0"
      }
    },

    "effects": {
      "gradients": {
        "heroOverlay": "radial-gradient(circle at 30% 40%, rgba(255, 193, 7, 0.3) 0%, rgba(0, 0, 0, 0.8) 70%)",
        "cardBackground": "linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%)",
        "accentGlow": "radial-gradient(circle, rgba(0, 188, 212, 0.3) 0%, transparent 70%)"
      },
      "blur": {
        "backdrop": "blur(20px)",
        "subtle": "blur(8px)"
      },
      "shadows": {
        "card": "0 8px 32px rgba(0, 0, 0, 0.3)",
        "cardHover": "0 16px 64px rgba(0, 0, 0, 0.4)",
        "button": "0 4px 16px rgba(255, 193, 7, 0.3)",
        "glow": "0 0 20px rgba(0, 188, 212, 0.5)"
      }
    },

    "layout": {
      "hero": {
        "minHeight": "100vh",
        "display": "flex",
        "alignItems": "center",
        "position": "relative",
        "background": "radial-gradient(circle at 30% 40%, rgba(255, 193, 7, 0.3) 0%, rgba(0, 0, 0, 0.8) 70%)"
      },
      "section": {
        "padding": "4rem 0",
        "maxWidth": "1440px",
        "margin": "0 auto"
      },
      "container": {
        "maxWidth": "1200px",
        "margin": "0 auto",
        "padding": "0 2rem"
      }
    },

    "animations": {
      "fadeIn": {
        "keyframes": "@keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }",
        "duration": "0.6s",
        "easing": "ease-out"
      },
      "hover": {
        "transform": "translateY(-4px)",
        "transition": "all 0.3s ease"
      },
      "pulse": {
        "animation": "pulse 2s infinite"
      }
    },

    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    },

    "usage": {
      "heroSection": {
        "background": "Use primary background gradient",
        "title": "Use hero typography scale with primary text color",
        "subtitle": "Use body typography with secondary text color",
        "cta": "Use primary button style"
      },
      "cardLayouts": {
        "background": "Use card base styles with hover effects",
        "content": "Apply appropriate typography scales",
        "actions": "Use secondary or ghost button styles"
      },
      "navigation": {
        "background": "Use navigation component styles",
        "links": "Use ghost button styling for nav items"
      }
    }
  }
}

